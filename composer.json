{
    "name": "pestphp/pest-plugin-browser",
    "description": "Pest plugin to test browser interactions",
    "keywords": [
        "php",
        "framework",
        "pest",
        "unit",
        "test",
        "testing",
        "browser"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "pestphp/pest": "^4.0.0",
        "pestphp/pest-plugin": "^4.0.0",
        "symfony/process": "^7.3.0",
        "textalk/websocket": "^1.6.3"
    },
    "autoload": {
        "psr-4": {
            "Pest\\Browser\\": "src/"
        },
        "files": [
            "src/Autoload.php"
        ]
    },
    "require-dev": {
        "laravel/pint": "^1.22.1",
        "peckphp/peck": "^0.1.3",
        "pestphp/pest-dev-tools": "^4.0.0",
        "pestphp/pest-plugin-type-coverage": "^4.0.0",
        "ext-pcntl": "*",
        "ext-posix": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "bump:minor": [
            "composer update && composer bump",
            "npx npm-check-updates -u -t minor && npm install"
        ],
        "lint": [
            "rector",
            "pint"
        ],
        "test:type-coverage": "pest --type-coverage --exactly=100",
        "test:typos": "peck",
        "test:lint": [
            "rector --dry-run",
            "pint --test"
        ],
        "test:unit": "pest --parallel --coverage --exactly=84.8",
        "test:types": "phpstan",
        "test": [
            "@test:lint",
            "@test:type-coverage",
            "@test:typos",
            "@test:unit",
            "@test:types"
        ],
        "post-update-cmd": [
            "composer install -d playground --ansi"
        ],
        "post-install-cmd": [
            "composer install -d playground --ansi"
        ]
    },
    "extra": {
        "pest": {
            "plugins": [
                "Pest\\Browser\\Plugin"
            ]
        }
    }
}
