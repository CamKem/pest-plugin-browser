{
    "name": "pestphp/pest-plugin-browser",
    "description": "Pest plugin to test browser interactions",
    "keywords": [
        "php",
        "framework",
        "pest",
        "unit",
        "test",
        "testing",
        "browser"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "ext-sockets": "*",
        "pestphp/pest": "^4.0.0",
        "pestphp/pest-plugin": "^4.0.0",
        "phrity/websocket": "^3.5.0",
        "react/async": "^4.3",
        "react/event-loop": "^1.5",
        "react/http": "^1.11",
        "react/promise-timer": "^1.11",
        "symfony/process": "^7.3.0",
        "symfony/psr-http-message-bridge": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "Pest\\Browser\\": "src/"
        },
        "files": [
            "src/Autoload.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "drivers/laravel/app/",
            "Database\\Factories\\": "drivers/laravel/database/factories/",
            "Database\\Seeders\\": "drivers/laravel/database/seeders/",
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "ext-pcntl": "*",
        "ext-posix": "*",
        "fakerphp/faker": "^1.24.1",
        "laravel/framework": "^11.45.1",
        "laravel/pail": "^1.2.3",
        "laravel/pint": "^1.22.1",
        "laravel/sail": "^1.43.1",
        "livewire/livewire": "^3.6.3",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.2",
        "pestphp/pest-dev-tools": "^4.0.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pestphp/pest-plugin-type-coverage": "^4.0.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "setup": [
            "cd drivers/laravel && npm install && npm run build",
            "npx playwright install"
        ],
        "bump:minor": [
            "composer update && composer bump",
            "npx npm-check-updates -u -t minor && npm install"
        ],
        "lint": [
            "rector",
            "pint"
        ],
        "test:profanity": "pest --profanity --compact --language=en",
        "test:type-coverage": "pest --type-coverage --exactly=100",
        "test:lint": [
            "rector --dry-run",
            "pint --test"
        ],
        "test:unit": "pest --parallel",
        "test:types": "phpstan",
        "test": [
            "@test:lint",
            "@test:profanity",
            "@test:type-coverage",
            "@test:types",
            "@test:unit"
        ]
    },
    "extra": {
        "pest": {
            "plugins": [
                "Pest\\Browser\\Plugin"
            ]
        }
    }
}
